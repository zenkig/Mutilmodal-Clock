<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ups.alarm"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >

        <!-- android:name="AlarmActivity" -->


        <!-- following "name" is the Starting lunching activity for the Android App -->
        <activity
            android:name="za.co.neilson.alarm.AlarmActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="za.co.neilson.alarm.preferences.AlarmPreferencesActivity"
            android:label="@string/app_name"
            android:parentActivityName="za.co.neilson.alarm.AlarmActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AlarmActivity" />
        </activity>

        <service
            android:name="za.co.neilson.alarm.service.AlarmService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:process="za.co.neilson.alarm.serviceProcess" />

        <receiver android:name="za.co.neilson.alarm.service.AlarmServiceBroadcastReciever" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="za.co.neilson.alarm.alert.AlarmAlertActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name="za.co.neilson.alarm.alert.AlarmAlertBroadcastReciever" />
        <receiver android:name="za.co.neilson.alarm.telephony.PhoneStateChangedBroadcastReciever" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <!-- All weather activities to Multi-modal output -->
        <activity
            android:name="za.co.neilson.alarm.weatheractivity.ShakeActivity"
            android:label="@string/title_activity_shake" >
        </activity>
        <activity
            android:name="za.co.neilson.alarm.weatheractivity.SpeechActivity"
            android:label="@string/title_activity_speech" >
        </activity>
        <activity
            android:name="za.co.neilson.alarm.weatheractivity.NoiseActivity"
            android:label="@string/title_activity_noise" >
        </activity>
        <activity
            android:name="za.co.neilson.alarm.weatheractivity.ScrathActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- weather model -->
        <activity
            android:name="za.co.neilson.alarm.weatherapi.WeatherInfoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="za.co.neilson.alarm.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="za.co.neilson.alarm.rdfmodel.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>
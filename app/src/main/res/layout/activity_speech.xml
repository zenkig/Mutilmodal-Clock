<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EEC772"
    tools:context="za.co.neilson.alarm.weatheractivity.SpeechActivity">

    <TextClock
        android:layout_width="263dp"
        android:layout_height="56dp"
        android:id="@+id/textClock"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="normal"
        android:layout_alignTop="@+id/speech"
        android:layout_alignEnd="@+id/min5" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:text="Speech Out your love for A Sunny Day! "
        android:textColor="#FFFFFF"
        android:layout_below="@+id/start_reg"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/status"
        android:icon="@drawable/sunnypic"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/weatherfake"
        android:src="@drawable/sunnypic"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/transparent_color"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/welcome"
        android:layout_alignEnd="@+id/welcome" />

    <TextView
        android:id="@+id/textsunny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="sunny"
        android:textColor="#20882299"
        android:layout_above="@+id/status"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Speech :)"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        style="@style/Base.Theme.AppCompat.Light" />

    <TextView
        android:id="@+id/speech"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/sunny"
        android:icon="@drawable/bell"
        android:layout_width="119dp"
        android:layout_height="34dp"
        android:contentDescription="@string/bell"
        android:src="@drawable/sunny"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/transparent_color"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp" />


    <ImageButton
        android:id="@+id/min5"
        android:icon="@drawable/weatherfake"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/weatherfake"
        android:src="@drawable/min5sunny"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.25"
        android:background="@drawable/transparent_color"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp" />


</RelativeLayout>






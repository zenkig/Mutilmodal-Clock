<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="za.co.neilson.alarm.weatheractivity.NoiseActivity"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#C4D2E0"
android:orientation="vertical"
android:weightSum="1">

<TextClock
    android:layout_width="263dp"
    android:layout_height="56dp"
    android:id="@+id/textClock"
    android:layout_gravity="center_horizontal"
    android:textColor="#FFFFFF"
    android:textSize="60sp"
    android:textStyle="normal"
    android:layout_marginTop="40dp" />

<ImageButton
    android:id="@+id/min5"
    android:icon="@drawable/weatherfake"
    android:layout_width="309dp"
    android:layout_height="wrap_content"
    android:contentDescription="@string/weatherfake"
    android:src="@drawable/min5sunny"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_weight="0.25"
    android:background="@drawable/transparent_color"
    android:layout_marginTop="20dp" />

<ImageButton
    android:id="@+id/status"
    android:icon="@drawable/cloudallfake"
    android:layout_width="233dp"
    android:layout_height="wrap_content"
    android:contentDescription="@string/weatherfake"
    android:src="@drawable/cloudallfake"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/transparent_color"
    android:layout_marginTop="30dp" />


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <za.co.neilson.alarm.weatheractivity.SoundLevelView
        android:id="@+id/volume"
        android:layout_width="230sp"
        android:layout_height="60sp"/>

</LinearLayout>


<ImageView
    android:id="@+id/cloudy"
    android:icon="@drawable/bell"
    android:layout_width="119dp"
    android:layout_height="34dp"
    android:contentDescription="@string/bell"
    android:src="@drawable/cloudy"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/transparent_color"
    android:layout_marginTop="40dp" />

</LinearLayout>
